rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /products/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /categories/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /users/{uid} {
      // čtení povoleno všem přihlášeným (kvůli administraci načítané z klienta s anonymním přihlášením)
      allow read: if request.auth != null;
      // zápis jen vlastníkovi
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    // Umožni stejná pravidla i pro podkolekce (např. users/{uid}/wishlist/*)
    match /users/{uid}/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /loyaltyCodes/{codeId} {
      allow read, write: if request.auth != null;
    }

    // Newsletter: dovol vytvoření všem (přihlášení není nutné), čtení jen přihlášeným.
    match /newsletter/{docId} {
      allow create: if true;
      allow read: if request.auth != null;
      allow update, delete: if false;
    }
  }
}


